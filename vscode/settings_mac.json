{
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.autoClosingBrackets": "beforeWhitespace",
    "editor.autoClosingQuotes": "beforeWhitespace",
    "editor.cursorWidth": 2,
    "editor.codeLens": false,
    "editor.matchBrackets": false, // using Subtle Match Brackets
    "editor.minimap.enabled": false,
    "editor.renderIndentGuides": false,
    "editor.suggest.localityBonus": true,
    "editor.tabCompletion": "on",
    "files.exclude": {
      "**/*.anim": true,
      "**/*.controller": true,
      "**/*.lock": true,
      "**/*.ide": true,
      "**/*.hdr": true,
      "**/*.mixer": true,
      "**/*.mp3": true,
    },
    "files.trimTrailingWhitespace": true,
    "subtleBrackets.style": { "borderWidth": "2px" },
    "window.openFilesInNewWindow": "off",
    "window.openFoldersInNewWindow": "off",
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#ff8000",
        "statusBar.background": "#222222"
    },
    "window.zoomLevel": 1,
    "zenMode.hideStatusBar": false,

    "multiCommand.commands": [
        {
            "command": "multiCommand.scrollDown",
            "sequence": [ "scrollLineDown", "scrollLineDown", "scrollLineDown", "scrollLineDown", "scrollLineDown",
                "scrollLineDown", "scrollLineDown", "scrollLineDown", "scrollLineDown", "scrollLineDown"
            ]
        },
        {
            "command": "multiCommand.scrollUp",
            "sequence": [ "scrollLineUp", "scrollLineUp", "scrollLineUp", "scrollLineUp", "scrollLineUp",
                "scrollLineUp", "scrollLineUp", "scrollLineUp", "scrollLineUp", "scrollLineUp"
            ]
        }
    ],

    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/local/Cellar/neovim/0.3.4/bin/nvim",
    "vim.hlsearch": true,
    "vim.leader": ",",
    "vim.sneak": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.substituteGlobalFlag": true,
    "vim.visualstar": true,

    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["0"],
            "after": ["^"]
        },
        // Yank to end of line
        {
            "before": ["Y"],
            "after": ["y", "$"]
        },
        // Don't skip line down when wrapped
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        // Don't skip line up when wrapped
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        // Join line below, with whitespace
        {
            "before": ["g", "j"],
            "after": ["J"]
        },
        // Quick whitespace without entering insert mode
        {
            "before": ["space"],
            "after": ["i", "space", "<esc>"]
        },
        {
            "before": ["<leader>", "<leader>"],
            "commands": ["workbench.action.showCommands"]
        },
        {
            "before": ["<leader>", "m"],
            "commands": ["workbench.action.gotoSymbol"]
        },
        {
            "before": ["<leader>", "."],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["<leader>", "space"],
            "commands": [":nohl"]
        },
        {
            "before": ["<leader>", "b"],
            "commands": ["bookmarks.toggle"]
        },
        {
            "before": ["<leader>", "j", "b"],
            "commands": ["bookmarks.jumpToNext"]
        },
        {
            "before": ["<leader>", "k", "b"],
            "commands": ["bookmarks.jumpToPrevious"]
        },
        {
            "before": ["<leader>", "B"],
            "commands": ["bookmarks.list"]
        },
        {
            "before": ["<leader>", "w"],
            "commands": ["workbench.action.closeActiveEditor"]
        },
        // Insert below while adding an empty line
        {
            "before": ["<leader>", "o"],
            "after": ["o", "<cr>"]
        },
        // Insert above while adding an empty line
        {
            "before": ["<leader>", "O"],
            "after": ["O", "<esc>", "O"]
        },
        {
            "before": ["<leader>", "f", "d"],
            "commands": ["editor.action.formatDocument"]
        },
        {
            "before": ["<leader>", "s", "b"],
            "commands": ["workbench.action.toggleSidebarVisibility"]
        },
        {
            "before": ["g", "p"],
            "commands": ["editor.action.peekDefinition"]
        },
        {
            "before": ["<leader>", "y"],
            "after": ["\"", "+", "y"]
        },
        {
            "before": ["<leader>", "p"],
            "after": ["\"", "+", "p"]
        },
        {
            "before": ["<C-j>"],
            "commands": ["multiCommand.scrollDown"]
        },
        {
            "before": ["<C-k>"],
            "commands": ["multiCommand.scrollUp"]
        },
        {
            "before": ["J"],
            "commands": ["workbench.action.previousEditor"]
        },
        {
            "before": ["K"],
            "commands": ["workbench.action.nextEditor"]
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["0"],
            "after": ["^"]
        },
        // Select in brackets with one line on top (methods, if statements, classes...)
        {
            "before": ["v", "m"],
            "after": ["a", "}", "o", "k", "V"]
        },
        {
            "before": ["p"],
            "after": ["p", "g", "v", "y"]
        },
        {
            "before": ["<leader>", "y"],
            "after": ["\"", "+", "y"]
        },
        {
            "before": ["<leader>", "p"],
            "after": ["\"", "+", "p"]
        },
        {
            "before": ["<C-j>"],
            "commands": ["multiCommand.scrollDown"]
        },
        {
            "before": ["<C-k>"],
            "commands": ["multiCommand.scrollUp"]
        },
        {
            "before": ["J"],
            "commands": ["workbench.action.previousEditor"]
        },
        {
            "before": ["K"],
            "commands": ["workbench.action.nextEditor"]
        },
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        },
        {
            "before": ["<leader>", "<leader>"],
            "commands": ["workbench.action.showCommands"]
        },
        {
            "before": ["<leader>", "f", "d"],
            "commands": ["editor.action.formatDocument"]
        },
        {
            "before": ["<leader>", "f", "f"],
            "commands": ["editor.action.formatSelection"]
        },
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": [",", ","],
            "after": ["<esc>"]
        },
    ],
    "cmake.configureOnOpen": true
}
