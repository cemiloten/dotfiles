{
    "C_Cpp.autocomplete": "Disabled",
    "C_Cpp.intelliSenseEngine": "Disabled",
    "C_Cpp.suggestSnippets": false,

    "clangd.path": "/usr/local/Cellar/llvm/8.0.0/bin/clangd",
    "clangd.arguments": [
        "-log=verbose",
        "-pretty"
    ],

    "editor.acceptSuggestionOnEnter": "smart",
    "editor.autoClosingBrackets": "beforeWhitespace",
    "editor.autoClosingQuotes": "beforeWhitespace",
    "editor.cursorWidth": 2,
    "editor.codeLens": false,
    "editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 13,
    "editor.matchBrackets": false, // using Subtle Match Brackets
    "editor.minimap.enabled": false,
    "editor.renderIndentGuides": false,
    "editor.suggest.localityBonus": true,
    "editor.tabCompletion": "on",
    "files.exclude": {
      "**/*.anim": true,
      "**/*.controller": true,
      "**/*.lock": true,
      "**/*.ide": true,
      "**/*.hdr": true,
      "**/*.mixer": true,
      "**/*.mp3": true,
    },
    "files.trimTrailingWhitespace": true,
    "subtleBrackets.disableNative": true,
    "subtleBrackets.style": { "borderWidth": "2px" },
    "subtleBrackets.pairs": [
        { "open": "(", "close": ")" },
        { "open": "[", "close": "]" },
        { "open": "{", "close": "}" },
        { "open": "<", "close": ">" }
    ],
    "subtleBrackets.parse": false,
    "window.openFilesInNewWindow": "off",
    "workbench.colorCustomizations": {
        "statusBar.background": "#222222"
    },
    "workbench.activityBar.visible": false,
    "zenMode.hideStatusBar": false,

    "multiCommand.commands": [
        {
            "command": "multiCommand.scrollDown",
            "sequence": [ "scrollLineDown", "scrollLineDown", "scrollLineDown", "scrollLineDown",
                "scrollLineDown", "scrollLineDown", "scrollLineDown", "scrollLineDown",
            ]
        },
        {
            "command": "multiCommand.scrollUp",
            "sequence": [ "scrollLineUp", "scrollLineUp", "scrollLineUp", "scrollLineUp",
                "scrollLineUp", "scrollLineUp", "scrollLineUp", "scrollLineUp",
            ]
        }
    ],

    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.duration": 100,
    "vim.hlsearch": true,
    "vim.leader": ",",
    "vim.sneak": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.substituteGlobalFlag": true,
    "vim.visualstar": true,

    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["0"],
            "after": ["^"]
        },
        {
            "before": ["^"],
            "after": ["0"]
        },
        // Yank to end of line
        {
            "before": ["Y"],
            "after": ["y", "$"]
        },
        // Don't skip line down when wrapped
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        // Don't skip line up when wrapped
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        // Join line below, with whitespace
        {
            "before": ["g", "j"],
            "after": ["J"]
        },
        {
            "before": ["g", "k"],
            "after": ["l", "c", "i", "w", "<cr>","<esc>"]
        },
        {
            "before": ["<leader>", "<leader>"],
            "commands": ["workbench.action.showCommands"]
        },
        {
            "before": ["<leader>", "m"],
            "commands": ["workbench.action.gotoSymbol"]
        },
        {
            "before": ["<leader>", "."],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["<leader>", "space"],
            "commands": [":nohl"]
        },
        {
            "before": ["<leader>", "b"],
            "commands": ["bookmarks.toggle"]
        },
        {
            "before": ["<leader>", "w"],
            "commands": ["workbench.action.closeActiveEditor"]
        },
        {
            "before": ["<leader>", "<"],
            "after": ["0", "d", "w"]
        },
        // Insert below while adding an empty line
        {
            "before": ["<leader>", "o"],
            "after": ["o", "<cr>"]
        },
        // Insert above while adding an empty line
        {
            "before": ["<leader>", "O"],
            "after": ["O", "<esc>", "O"]
        },
        {
            "before": ["<leader>", "f", "d"],
            "commands": ["editor.action.formatDocument"]
        },
        {
            "before": ["<leader>", "s", "b"],
            "commands": ["workbench.action.toggleSidebarVisibility"]
        },
        {
            "before": ["g", "p"],
            "commands": ["editor.action.peekDefinition"]
        },
        {
            "before": ["<leader>", "y"],
            "after": ["\"", "+", "y"]
        },
        {
            "before": ["<leader>", "p"],
            "after": ["\"", "+", "p"],
        },
        {
            "before": ["<leader>", "P"],
            "after": ["\"", "+", "P"]
        },
        {
            "before": ["<C-j>"],
            "commands": ["multiCommand.scrollDown"]
        },
        {
            "before": ["<C-k>"],
            "commands": ["multiCommand.scrollUp"]
        },
        {
            "before": ["J"],
            "commands": ["workbench.action.previousEditor"]
        },
        {
            "before": ["K"],
            "commands": ["workbench.action.nextEditor"]
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["0"],
            "after": ["^"]
        },
        // Select in brackets with one line on top (methods, if statements, classes...)
        {
            "before": ["v", "m"],
            "after": ["a", "}", "o", "V"]
        },
        {
            "before": ["v", "M"],
            "after": ["a", "}", "o", "V"]
        },
        {
            "before": ["p"],
            "after": ["p", "g", "v", "y"]
        },
        {
            "before": ["<leader>", "y"],
            "after": ["\"", "+", "y"]
        },
        {
            "before": ["<leader>", "p"],
            "after": ["\"", "+", "p"]
        },
        {
            "before": ["<C-j>"],
            "commands": ["multiCommand.scrollDown"]
        },
        {
            "before": ["<C-k>"],
            "commands": ["multiCommand.scrollUp"]
        },
        {
            "before": ["J"],
            "commands": ["workbench.action.previousEditor"]
        },
        {
            "before": ["K"],
            "commands": ["workbench.action.nextEditor"]
        },
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        },
        {
            "before": ["<leader>", "<leader>"],
            "commands": ["workbench.action.showCommands"]
        },
        {
            "before": ["<leader>", "f", "d"],
            "commands": ["editor.action.formatDocument"]
        },
        {
            "before": ["<leader>", "f", "f"],
            "commands": ["editor.action.formatSelection"]
        },
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": [",", ","],
            "after": ["<esc>"]
        },
    ],
    "workbench.iconTheme": "Monokai Pro (Filter Spectrum) Icons",
    "window.zoomLevel": 0,
    "extensions.ignoreRecommendations": true,
    "workbench.colorTheme": "dark-plus-syntax"
}
