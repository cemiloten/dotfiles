{
    "editor.cursorWidth": 2,
    "editor.cursorBlinking": "phase",
    "editor.codeLens": false,
    "editor.fontSize": 12,
    "editor.lineNumbers": "relative",
    "editor.matchBrackets": false, // using Subtle Match Brackets
    "editor.minimap.enabled": false,
    "editor.renderIndentGuides": false,
    "editor.renderLineHighlight": "gutter",
    "editor.snippetSuggestions": "top",
    "editor.suggest.localityBonus": true,
    "editor.tabCompletion": "on",
    "files.trimTrailingWhitespace": true,
    "subtleBrackets.style": { "borderWidth": "2px" },
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#ff8000",
    },
    "workbench.colorTheme": "eppz!",
    "zenMode.hideStatusBar": false,

    "vim.hlsearch": true,
    "vim.leader": ",",
    "vim.sneak": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.substituteGlobalFlag": true,
    "vim.visualstar": true,

    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["0"],
            "after": ["^"]
        },
        {
            "before": ["<leader>", "space"],
            "commands": [":nohl"]
        },
        // Yank to end of line
        {
            "before": ["Y"],
            "after": ["y", "$"]
        },
        // Don't skip line down when wrapped
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        // Don't skip line up when wrapped
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        // Join line below, with whitespace
        {
            "before": ["g", "j"],
            "after": ["J"]
        },
        // Quick whitespace without entering insert mode
        {
            "before": ["space"],
            "after": ["i", "space", "<esc>"]
        },
        // Insert below while adding an empty line
        {
            "before": ["<leader>", "o"],
            "after": ["o", "<cr>"]
        },
        // Insert above while adding an empty line
        {
            "before": ["<leader>", "O"],
            "after": ["O", "<esc>", "O"]
        },
        {
            "before": ["<leader>", "f", "d"],
            "commands": ["editor.action.formatDocument"]
        },
        {
            "before": ["<leader>", "b"],
            "commands": ["editor.debug.action.toggleBreakpoint"]
        },
        {
            "before": ["<leader>", "s", "b"],
            "commands": ["workbench.action.toggleSidebarVisibility"]
        },
        {
            "before": ["g", "p"],
            "commands": ["editor.action.peekDefinition"]
        },
        {
            "before": ["<leader>", "y"],
            "after": ["\"", "+", "y"]
        },
        {
            "before": ["<leader>", "p"],
            "after": ["\"", "+", "p"]
        },
        {
            "before": ["<leader>", "d"],
            "after": ["\"", "_", "d"]
        },
        {
            "before": ["<C-j>"],
            "after": ["<C-e>", "<C-e>", "<C-e>", "<C-e>", "<C-e>",
                "<C-e>", "<C-e>", "<C-e>", "<C-e>", "<C-e>"]
        },
        {
            "before": ["<C-k>"],
            "after": ["<C-y>", "<C-y>", "<C-y>", "<C-y>", "<C-y>",
                "<C-y>", "<C-y>", "<C-y>", "<C-y>", "<C-y>"]
        },

        {
            "before": ["J"],
            "commands": ["workbench.action.previousEditor"]
        },
        {
            "before": ["K"],
            "commands": ["workbench.action.nextEditor"]
        },
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        },
        {
            "before": ["<leader>", "z", "e", "n"],
            "commands": ["workbench.action.toggleZenMode"]
        },
        {
            "before": ["<C-s>"],
            "commands": ["workbench.action.files.save"]
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["0"],
            "after": ["^"]
        },
        {
            "before": ["<leader>", "y"],
            "after": ["\"", "+", "y"]
        },
        {
            "before": ["<leader>", "p"],
            "after": ["\"", "+", "p"]
        },
        {
            "before": ["<C-j>"],
            "after": ["<C-e>", "<C-e>", "<C-e>", "<C-e>",
                "<C-e>", "<C-e>", "<C-e>", "<C-e>"]
        },
        {
            "before": ["<C-k>"],
            "after": ["<C-y>", "<C-y>", "<C-y>", "<C-y>",
                "<C-y>", "<C-y>", "<C-y>", "<C-y>"]
        },

        {
            "before": ["J"],
            "commands": ["workbench.action.previousEditor"]
        },
        {
            "before": ["K"],
            "commands": ["workbench.action.nextEditor"]
        },
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        },
        {
            "before": ["<leader>", "f", "d"],
            "commands": ["editor.action.formatDocument"]
        },
        {
            "before": ["<leader>", "f", "f"],
            "commands": ["editor.action.formatSelection"]
        },
        {
            "before": ["<leader>", "z", "e", "n"],
            "commands": ["workbench.action.toggleZenMode"]
        },
        {
            "before": ["<C-s>"],
            "commands": ["workbench.action.files.save"]
        },
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": [",", ","],
            "after": ["<esc>"]
        },
    ],
}
