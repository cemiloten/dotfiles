{
    "C_Cpp.suggestSnippets": false,
    "C_Cpp.autocomplete": "Disabled",
    "C_Cpp.intelliSenseEngine": "Tag Parser",
    "C_Cpp.formatting": "Disabled",


    "clang-format.executable": "C:\\Program Files (x86)\\LLVM\\bin\\clang-format.exe",
    "clang-format.style": "{ BasedOnStyle: LLVM, DerivePointerAlignment: false, PointerAlignment: Left }",

    "clangd.path": "C:\\Program Files (x86)\\LLVM\\bin\\clangd.exe",

    "csharpfixformat.style.braces.onSameLine": true,
    "csharpfixformat.style.spaces.beforeParenthesis": false,
    "csharpfixformat.style.spaces.insideEmptyBraces": false,
    "csharpfixformat.style.spaces.afterParenthesis": false,

    "subtleBrackets.pairs": [
        { "open": "(", "close": ")" },
        { "open": "[", "close": "]" },
        { "open": "{", "close": "}" },
        { "open": "<", "close": ">" }
    ],
    "subtleBrackets.parse": false,


    "editor.acceptSuggestionOnEnter": "smart",
    "editor.codeLens": false, // hide "{n} references" above code
    "editor.cursorBlinking": "phase",
    "editor.folding": false,
    "editor.fontFamily": "Consolas, 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.minimap.enabled": true,
    "editor.minimap.maxColumn": 120,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "editor.renderIndentGuides": false,
    "editor.suggest.localityBonus": true,
    "editor.tabCompletion": "on",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "window.openFilesInNewWindow": "off",
    "window.openFoldersInNewWindow": "on",
    "workbench.colorCustomizations": {
        "statusBar.background": "#222222",
        "statusBar.foreground": "#ffffff",
        "editorCursor.foreground": "#ff8800",
        "editorCursor.background": "#ffffff"
    },
    "workbench.editor.enablePreview": false,
    "zenMode.hideStatusBar": false,
    "zenMode.hideTabs": false,

    "multiCommand.commands": [
        {
            "command": "multiCommand.scrollDown",
            "sequence": [ "scrollLineDown", "scrollLineDown", "scrollLineDown",
                "scrollLineDown", "scrollLineDown"
            ]
        },
        {
            "command": "multiCommand.scrollUp",
            "sequence": [ "scrollLineUp", "scrollLineUp", "scrollLineUp",
                "scrollLineUp", "scrollLineUp"
            ]
        }
    ],

    "vim.hlsearch": true,
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.duration": 100,
    "vim.sneak": true,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.substituteGlobalFlag": true,
    "vim.visualstar": true,

    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["0"],
            "after": ["^"]
        },
        {
            "before": ["Y"],
            "after": ["y", "$"]
        },
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        {
            "before": ["g", "j"],
            "after": ["J"]
        },
        {
            "before": ["g", "k"],
            "after": ["w", "i", "<cr>", "<esc>", "w"]
        },
        {
            "before": ["<leader>", "<leader>"],
            "commands": ["workbench.action.showCommands"]
        },
        {
            "before": ["<leader>", "m"],
            "commands": ["workbench.action.gotoSymbol"]
        },
        {
            "before": ["<leader>", "."],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["<leader>", "space"],
            "commands": [":nohl"]
        },
        {
            "before": ["<leader>", "b"],
            "commands": ["bookmarks.toggle"]
        },
        {
            "before": ["<leader>", "w"],
            "commands": ["workbench.action.closeActiveEditor"]
        },
        {
            "before": ["<leader>", "s"],
            "commands": ["workbench.action.files.save"]
        },
        {
            "before": ["<leader>", "<tab>"],
            "commands": ["workbench.action.toggleSidebarVisibility"]
        },
        {
            "before": ["<leader>", "o"],
            "after": ["o", "<cr>"]
        },
        {
            "before": ["<leader>", "O"],
            "after": ["O", "<esc>", "O"]
        },
        {
            "before": ["<leader>", "f", "d"],
            "commands": ["editor.action.formatDocument"]
        },
        {
            "before": ["g", "p"],
            "commands": ["editor.action.peekDefinition"]
        },
        {
            "before": ["<leader>", "y"],
            "after": ["\"", "+", "y"]
        },
        {
            "before": ["<leader>", "p"],
            "after": ["\"", "+", "p"]
        },
        {
            "before": ["<leader>", "P"],
            "after": ["\"", "+", "P"]
        },
        {
            "before": ["<C-j>"],
            "after": ["5", "<C-e>"]
        },
        {
            "before": ["<C-k>"],
            "after": ["5", "<C-y>"]
        },
        {
            "before": ["J"],
            "commands": ["workbench.action.previousEditor"],
        },
        {
            "before": ["K"],
            "commands": ["workbench.action.nextEditor"]
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["0"],
            "after": ["^"]
        },
        // Select in brackets with one line on top (methods, if statements, classes...)
        {
            "before": ["v", "m"],
            "after": ["a", "}", "o", "V"]
        },
        {
            "before": ["p"],
            "after": ["p", "g", "v", "y"]
        },
        {
            "before": ["<leader>", "y"],
            "after": ["\"", "+", "y"]
        },
        {
            "before": ["<leader>", "p"],
            "after": ["\"", "+", "p"]
        },
        {
            "before": ["<leader>", "P"],
            "after": ["\"", "+", "P"]
        },
        {
            "before": ["<C-j>"],
            "commands": ["multiCommand.scrollDown"]
        },
        {
            "before": ["<C-k>"],
            "commands": ["multiCommand.scrollUp"]
        },
        {
            "before": ["<leader>", "<leader>"],
            "commands": ["workbench.action.showCommands"]
        },
        {
            "before": ["J"],
            "commands": ["workbench.action.previousEditor"]
        },
        {
            "before": ["K"],
            "commands": ["workbench.action.nextEditor"]
        },
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        },
        {
            "before": ["<leader>", "f", "d"],
            "commands": ["editor.action.formatSelection"]
        },
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<esc>"]
        },
        {
            "before": ["k", "j"],
            "after": ["<esc>"]
        },
        {
            "before": [",", ","],
            "after": ["<esc>"]
        },
    ],
    "vim.leader": ",",

    "search.location": "sidebar",
    "files.exclude": {
      "**/*.anim": true,
      "**/*.controller": true,
      "**/*.lock": true,
      "**/*.ide": true,
      "**/*.hdr": true,
      "**/*.mixer": true,
      "**/*.mp3": true,
      "**/Trash": true
    },
    "cmake.configureOnOpen": true,
    "workbench.activityBar.visible": true,
    "extensions.ignoreRecommendations": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "dark-plus-syntax",
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[csharp]": {
        "editor.defaultFormatter": "Leopotam.csharpfixformat"
    },
    "editor.matchBrackets": false,
}
