	"Return real": {
		"prefix": [
			"returnreal;",
			"returnfloat;"
		],
		"body": [
			"frag_color = vec4($0);",
			"return;"
		],
		"description": "Return a vec3 before the end of main()"
	},

	"Return vec3": {
		"prefix": "returnvec3;",
		"body": [
			"frag_color = vec4($0, 1.0);",
			"return;"
		],
		"description": "Return a vec3 before the end of main()"
	}
}